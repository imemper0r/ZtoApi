{
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read --unstable-kv main.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --unstable-kv --watch main.ts",
    "cache": "deno cache --reload main.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
